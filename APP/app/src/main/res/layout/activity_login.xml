<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/view_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:viewBindingIgnore="false">

    <TextView
        android:id="@+id/activity_login_title"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICI DE SESSIÓ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_login_image_view"
        android:layout_width="221dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/app_logo" />

    <EditText
        android:id="@+id/activity_login_email"
        style="@style/inner_form_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/form_field"
        android:hint="Email"
        android:paddingHorizontal="40dp"
        android:paddingVertical="15dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title"
        app:layout_constraintVertical_bias="0.592" />

    <EditText
        android:id="@+id/activity_login_password"
        style="@style/inner_form_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/form_field"
        android:hint="Contrasenya"
        android:inputType="textPassword"
        android:paddingHorizontal="40dp"
        android:paddingVertical="15dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title"
        app:layout_constraintVertical_bias="0.712" />

    <Button
        android:id="@+id/activity_login_button"
        style="@style/inner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:paddingHorizontal="45dp"
        android:paddingVertical="10dp"
        android:text="INICIAR SESSIÓ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_login_title"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>