<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/view_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:viewBindingIgnore="false">

    <TextView
        android:id="@+id/register_type_title"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/register_type_question"
        style="@style/outer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ets alumne o professor?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_type_title"
        app:layout_constraintVertical_bias="0.108" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_type_title"
        app:layout_constraintVertical_bias="0.3">

        <TextView
            android:id="@+id/register_type_venedor"
            style="@style/inner_form_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"
            android:text="Alumne"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/register_type_check_box_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/round_checkbox"
            app:layout_constraintBottom_toBottomOf="@id/register_type_venedor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/register_type_venedor" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_type_title"
        app:layout_constraintVertical_bias="0.45">

        <TextView
            android:id="@+id/reg_type_comprador"
            style="@style/inner_form_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/form_field"
            android:paddingHorizontal="40dp"
            android:paddingVertical="12dp"
            android:text="Professor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/register_check_box_p"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/round_checkbox"
            app:layout_constraintBottom_toBottomOf="@id/reg_type_comprador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reg_type_comprador" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/register_type_next_button"
        style="@style/inner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/round_button_big"
        android:gravity="end"
        android:src="@drawable/next_page_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_type_title"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>