<resources>


    <!-- View style -->

    <style name="Theme.Localconnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="view_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>


    <!-- Text styles -->

    <style name="default_text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_text" parent="default_text">
        <item name="android:fontFamily">@font/kanit_extra_bold</item>
        <item name="android:textSize">@dimen/kanit_title_text_size</item>
    </style>

    <style name="outer_text" parent="default_text">
        <item name="android:fontFamily">@font/manrope_extra_bold</item>
        <item name="android:textSize">@dimen/manrope_outer_text_size</item>
    </style>


    <!-- Widget text styles -->

    <style name="default_widget_text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/manrope_extra_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inner_text" parent="default_widget_text">
        <item name="android:textSize">@dimen/manrope_text_size</item>
    </style>

    <style name="inner_dark_text" parent="default_widget_text">
        <item name="android:textSize">@dimen/manrope_text_size</item>
    </style>

    <style name="inner_form_text" parent="default_widget_text">
        <item name="android:textSize">@dimen/manrope_form_text_size</item>
        <item name="android:gravity">start</item>
    </style>


    <!-- Mini button inner text style -->

    <style name="mini_button_inner_text" parent="Theme.MaterialComponents.DayNight">
        <item name="android:fontFamily">@font/manrope_extra_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:focusable">true</item>
    </style>


    <!-- Nav bar style -->

    <style name="nav_bar_style" parent="Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/nav_bar_background_color</item>
        <item name="itemIconTint">@color/nav_item_colors</item>
        <item name="itemIconSize">@dimen/nav_icon_size</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="menu">@menu/bottom_nav_menu</item>
        <item name="android:paddingVertical">@dimen/nav_vertical_padding</item>
    </style>


</resources>